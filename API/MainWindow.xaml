<Window x:Class="TwitterFeedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Twitter Feed" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Twitter Feed" 
               FontSize="28" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="10" 
               Foreground="#FF5722"/>

        <Grid Margin="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,30,0,0">
                <Grid>
                    <TextBox x:Name="UsernameTextBox" 
                         Width="250" 
                         Height="40" 
                         Margin="0,0,10,0" 
                         Padding="10" 
                         FontSize="16" 
                         Background="#FFFFFF" 
                         Foreground="#424242" 
                         BorderBrush="#FF9800" 
                         BorderThickness="1"
                         LostFocus="UsernameTextBox_LostFocus" 
                         GotFocus="UsernameTextBox_GotFocus"/>
                    <TextBlock Text="Entrez un nom d'utilisateur" 
                           Foreground="Gray" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0" 
                           IsHitTestVisible="False" 
                           Visibility="{Binding Text, ElementName=UsernameTextBox, Converter={StaticResource StringToVisibilityConverter}}"/>
                </Grid>
                <Button x:Name="SearchButton" 
                    Content="Rechercher" 
                    Width="100" 
                    Height="40" 
                    Background="#3F51B5" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="SearchButton_Click"
                    Margin="0,0,0,0"/>
                <Button x:Name="FilterButton" 
                    Content="Filtrer" 
                    Width="100" 
                    Height="40" 
                    Background="#FF9800" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="FilterButton_Click"
                    Margin="10,0,0,0"/>
                <!-- Ajout du bouton Filtrer -->
            </StackPanel>
        </Grid>

        <ListBox x:Name="TweetsListBox" 
             Grid.Row="1" 
             VerticalAlignment="Stretch" 
             HorizontalAlignment="Stretch" 
             Margin="20"
             Background="White" 
             BorderBrush="#3F51B5" 
             BorderThickness="2"
             FontSize="16"
             ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#FF9800" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="5" 
                        Padding="10">
                        <TextBlock Text="{Binding}" 
                               TextWrapping="Wrap" 
                               Foreground="#424242"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>